@using MyHebrewBible.Client.Layout
@using MyHebrewBible.Client.Enums

<PageTitle>
	@if (String.IsNullOrEmpty(PageTitle))
	{
		@PageEnum.Title
	}
	else
	{
		@PageTitle
	}
</PageTitle>

<nav class="navbar navbar-expand bg-info-subtle fixed-top">

	<div class="collapse navbar-collapse justify-content-start">
		<div class="px-1">
			<HomeButton />
		</div>
	</div>

	<div class="collapse navbar-collapse justify-content-center">
		<div class="px-1">
			<h5 class="text-center"><i class="@PageEnum.Icon"></i>&nbsp;&nbsp;@PageEnum.Title</h5>
		</div>
	</div>

	<div class="collapse navbar-collapse justify-content-end">
		@if (PageEnum == Nav.BibleSearch)
		{
			<div class="pe-1">
				<PageHeaderNavAnchor NavTo="NavToAnchor.HebrewKeyboard" />
			</div>
		}

		<div class="pe-1">
			<PageInstructionsDefault />
		</div>

	</div>

</nav>

<div class="mt-5">
	<br />
</div>


@code {
	[Parameter, EditorRequired] public Nav PageEnum { get; set; } = Nav.Home;
	[Parameter] public string? BorderCSS { get; set; } = "border-bottom border-info";
	[Parameter] public string? PageTitle { get; set; }

}
