
<button @onclick="ButtonClicked"
				class="btn @Color btn-sm  float-end">
	@Title <i class='@Icon'></i>
</button>

@code {
	[Parameter, EditorRequired] public bool ShowSearch { get; set; }
	[Parameter, EditorRequired] public EventCallback<bool> OnToggleSelected { get; set; }

	private string Color => ShowSearch ? "btn-outline-success" : "btn-outline-success";
	private string Title => ShowSearch ? "Hide " : "Search ";
	private string Icon => ShowSearch ? "fas fa-search-minus" : "fas fa-search-plus"; //"fas fa-chevron-up" : "fas fa-chevron-down";
	
	protected void ButtonClicked()
	{
		ShowSearch = !ShowSearch;
		OnToggleSelected.InvokeAsync(ShowSearch);
	}
}
