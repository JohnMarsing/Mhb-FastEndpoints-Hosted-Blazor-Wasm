@if (StepState!.HundredToggleButtonIsVisible)
{
	<div>
		@PsalmsHundredsRow
	</div>
}

@if (!StepState!.HundredToggleButtonIsVisible)
{
	@TitleContent

	<div class="d-flex justify-content-between">
		<div class="d-flex justify-content-center">
			@TensColumn
		</div>
		<div class="d-flex justify-content-center">
			@OnesColumn
		</div>

	</div>
}

@if (IsDebug)
{
	@FooterDebugContent
}

@Footer

@code {
	[Parameter, EditorRequired] public StepState? StepState { get; set; }
	[Parameter, EditorRequired] public RenderFragment? TitleContent { get; set; }
	[Parameter] public RenderFragment? PsalmsHundredsRow { get; set; }
	[Parameter] public RenderFragment? TensColumn { get; set; }
	[Parameter] public RenderFragment? OnesColumn { get; set; }
	[Parameter] public RenderFragment? FooterDebugContent { get; set; }
	[Parameter] public RenderFragment? Footer { get; set; }
	[Parameter] public bool IsDebug { get; set; }
}
