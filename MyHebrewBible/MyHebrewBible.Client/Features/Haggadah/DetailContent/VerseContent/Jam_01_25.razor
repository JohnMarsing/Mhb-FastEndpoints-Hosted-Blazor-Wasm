@using H = MyHebrewBible.Client.Features.Haggadah.Helper

@if (Language == Enums.DisplayLanguage.English)
{
	<p class="@H.VerseClass">
		<b>@Title</b><br />
		@((MarkupString)H.VerseIcon)
		<sup class="@H.VerseSupClass">25</sup>
		But the one who looks into the perfect law, the law of liberty, and perseveres, 
		being no hearer who forgets but a doer who acts, he will be blessed in his doing.
	</p>
}
else
{
	<p class="@H.VerseClass">
		<b>@Title</b><br />
		@((MarkupString)H.VerseIcon)
		<sup class="@H.VerseSupClass">25</sup>
		Pero el que mira en la ley perfecta, la ley de la libertad, y persevera, 
		no siendo un oidor que olvida sino un hacedor que actúa, será bendecido en su hacer.
	</p>
}

@code {
	[Parameter, EditorRequired] public Enums.DisplayLanguage? Language { get; set; }
	[Parameter, EditorRequired] public string? Title { get; set; }
}