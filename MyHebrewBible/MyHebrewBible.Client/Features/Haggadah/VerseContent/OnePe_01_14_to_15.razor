@using H = MyHebrewBible.Client.Features.Haggadah.Helper

@if (Language == Enums.DisplayLanguage.English)
{
	<p class="@H.VerseClass">
		<b>@Title</b><br />
		@((MarkupString)H.VerseIcon)

		<sup class="@H.VerseSupClass">14</sup>
		As obedient children, do not conform to the evil desires of your former ignorance,

		<sup class="@H.VerseSupClass">15</sup>
		but like the Holy One who called you, be holy yourselves also in all your behavior.
	</p>
}
else
{
	<p class="@H.VerseClass">
		<b>@Title</b><br />
		@((MarkupString)H.VerseIcon)

		<sup class="@H.VerseSupClass">14</sup>
		I will heal their turning away from Me; I will love them freely, For My anger has turned away from them

		<sup class="@H.VerseSupClass">15</sup>
		I will be like the dew to Israel; He will flourish like the lily, And he will [fn]take root like the cedars of Lebanon

	</p>
}

@code {
	[Parameter, EditorRequired] public Enums.DisplayLanguage? Language { get; set; }
	[Parameter, EditorRequired] public string? Title { get; set; }
}
