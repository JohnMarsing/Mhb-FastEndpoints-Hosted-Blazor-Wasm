
<button @onclick="@(e => ButtonClick(ScriptureId, VerseNumber))"
				type="button" class="btn btn-outline-primary btn-xs" title="@ScriptureId : @VerseNumber">
	<i class="fas fa-chevron-down"></i>
</button>


@code {
	[Parameter, EditorRequired] public int ScriptureId { get; set; }
	[Parameter, EditorRequired] public int VerseNumber { get; set; }
	[Parameter] public EventCallback<ScriptureIdAndVerseNumber> OnVerseSelected { get; set; }

	private void ButtonClick(int scriptureId, int verse)
	{
		//Toast!.ShowWarning($"DrillDown|ButtonClick {scriptureId}!{verse}");
		OnVerseSelected.InvokeAsync(new ScriptureIdAndVerseNumber(scriptureId, verse));
	}
}
