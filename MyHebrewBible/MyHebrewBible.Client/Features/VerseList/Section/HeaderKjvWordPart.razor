@using BLBEnum=MyHebrewBible.Client.Enums.BLB

@* @inject IToastService? Toast *@

<div class="d-flex justify-content-between">

	<div class="px-1">
		<button @onclick="ButtonClick"
						type="button" class="mt-1 btn btn-outline-primary btn-sm" title="@BibleVerseBCV!.BCV">
			<i class="fas fa-chevron-up"></i>
		</button>
	</div>

	<div class="px-1">
		<h5 class="card-title">
			@* 
			ToDo: Test this
				<BibleAnchor BLB="BLBEnum.WLC" BookAndChapter="BookAndChapter" Verse="VerseNumber" /> 
			*@
			<BibleAnchor BLB="BLBEnum.WLC" BookChapterVerse="BookChapterVerse" />
		</h5>
	</div>


	<div class="pe-1">
		&nbsp;
	</div>

</div>

@code {
	[Parameter, EditorRequired] public BibleVerseBCV? BibleVerseBCV { get; set; }
	[Parameter, EditorRequired] public BookChapterVerse? BookChapterVerse { get; set; }
	[Parameter, EditorRequired] public int VerseNumber { get; set; }
	[Parameter] public EventCallback OnClose { get; set; }

	private void ButtonClick()
	{
		// Toast!.ShowInfo($"HeaderKjvWordPart|OnClose {BibleVerseBC}");
		OnClose.InvokeAsync();
	}
}
