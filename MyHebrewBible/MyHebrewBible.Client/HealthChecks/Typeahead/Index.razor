@page "/HealthChecks/Typeahead"

@using Page = MyHebrewBible.Client.Enums.Nav

<PageHeader PageEnum="Page.HealthCheckTypeahead" />

<div class="card mt-2 border-primary">
	<div class="card-header h3 px-2 text-center">Country Selection</div>
	<div class="card-body">
		<CountryTypeahead @bind-SelectedCountry="SelectedCountry" />
	</div>
	<div class="card-body">
		@if (!string.IsNullOrEmpty(SelectedCountry))
		{
			<p class="fs-3">Selected Country:<b>@SelectedCountry</b></p>
		}
	</div>

	<div class="card-body">
		<h4>Uses bind-value</h4>

		<h6 class="mb-1">Parent...</h6>
		<code class="ms-3">CountryTypeahead bind-SelectedCountry="SelectedCountry ..."</code>

		<h6 class="mt-3 mb-1">Child...</h6>
		<code class="ms-3">BlazoredTypeahead bind-Value="SelectedCountry ..."</code>
		<br /><br />
		<code class="ms-3">
			[Parameter]	public string SelectedCountry<br />
			{ <br />
			    get => selectedCountry; <br />
			    set <br />
			{ <br />
			if (selectedCountry != value) <br />
			{ <br />
			selectedCountry = value; <br />
			SelectedCountryChanged.InvokeAsync(value); // Notify parent of change <br />
			}<br />
			}<br />
			}	
		</code>
	</div>
</div>

<div class="card mt-2 border-primary">
	<div class="card-header h3 px-2 text-center">SmartEnum Example</div>
	
	<div class="card-body">
		ToDo
	</div>
</div>




@code {
	private string SelectedCountry { get; set; } = string.Empty;
}
